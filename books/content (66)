<tr data-index="2441">
<td style=" vertical-align: top;" data-index="2442"><div class="left" data-index="2443">Income before income tax</div></td>
<td data-index="2444"><div class="center" data-index="2445">&nbsp;</div></td>
<td style=" vertical-align: top;" data-index="2446"><div class="center" data-index="2447">&nbsp;&nbsp;&nbsp;&nbsp;80,000</div></td>
<td data-index="2448"><div class="center" data-index="2449">&nbsp;</div></td>
<td style=" vertical-align: top;" data-index="2450"><div class="center" data-index="2451">&nbsp;&nbsp;100,000</div></td>
</tr>
<tr data-index="2452">
<td style=" vertical-align: top;" data-index="2453"><div class="left" data-index="2454">Current income tax expense</div></td>
<td style=" vertical-align: top;" data-index="2455"><div class="center" data-index="2456">$16,000</div></td>
<td data-index="2457"><div class="center" data-index="2458">&nbsp;</div></td>
<td style=" vertical-align: top;" data-index="2459"><div class="center" data-index="2460">$16,000</div></td>
<td data-index="2461"><div class="center" data-index="2462">&nbsp;</div></td>
</tr>
<tr data-index="2463">
<td style=" vertical-align: top;" data-index="2464"><div class="left" data-index="2465">Deferred income tax expense</div></td>
<td style=" vertical-align: top;" data-index="2466"><div class="center un" data-index="2467">–0–</div></td>
<td style=" vertical-align: top;" data-index="2468"><div class="center" data-index="2469"><span class="un" data-index="2470">&nbsp;&nbsp;&nbsp;&nbsp;16,000</span></div></td>
<td style=" vertical-align: top;" data-index="2471"><div class="center" data-index="2472"><span class="un" data-index="2473">&nbsp;&nbsp;&nbsp;&nbsp;4,000</span></div></td>
<td style=" vertical-align: top;" data-index="2474"><div class="center" data-index="2475"><span class="un" data-index="2476">&nbsp;&nbsp;&nbsp;&nbsp;20,000</span></div></td>
